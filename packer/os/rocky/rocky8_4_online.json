{
  "variables": {
      "boot_wait": "5s",
      "disk_size": "40960",
      "iso_checksum": "ad6db5cd44da17d055b0803fd2d4090ffe69b0db57ca346148ee400e8285d31c",
      "iso_checksum_type": "sha256",
      "memsize": "2048",
      "numvcpus": "2",
      "ssh_password" : "vagrant",
      "ssh_username" : "vagrant",
      "vm_name": "RockyLinux-8_4",
      "box_name": "RockyLinux-8_4"
    },
    "builders": [
      {
        "type": "vmware-iso",
        "name": "vmware",
        "boot_command": [
          "e<down><down><end><bs><bs><bs><bs><bs>text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/rocky/ks8_4_online.cfg<leftCtrlOn>x<leftCtrlOff>"
        ],
        "boot_wait": "{{ user `boot_wait` }}",
        "disk_size": "{{ user `disk_size` }}",
        "disk_type_id": "0",
        "guest_os_type": "centos-64",
        "headless": false,
        "http_directory": "http",
        "iso_checksum": "{{ user `iso_checksum` }}",
        "iso_urls": [
          "./iso/Rocky-8.4-x86_64-minimal.iso"
        ],
        "shutdown_command": "echo '{{user `ssh_password`}}'|sudo -S /sbin/halt -h -p",
        "ssh_password": "{{ user `ssh_password` }}",
        "ssh_port": 22,
        "ssh_username": "{{ user `ssh_username` }}",
        "ssh_timeout": "10500s",
        "vm_name": "{{ user `vm_name` }}"
      },
      {
        "type": "virtualbox-iso",
        "name": "virtualbox",
        "boot_command": [
          "e<down><down><end><bs><bs><bs><bs><bs>text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/rocky/ks8_4.cfg<leftCtrlOn>x<leftCtrlOff>"
        ],
        "boot_wait": "{{ user `boot_wait` }}",
        "disk_size": "{{ user `disk_size` }}",
        "guest_os_type": "RedHat_64",
        "headless": false,
        "http_directory": "./http",
        "iso_checksum": "{{ user `iso_checksum` }}",
        "iso_urls": [
          "./iso/Rocky-8.4-x86_64-minimal.iso"
        ],
        "shutdown_command": "echo '{{user `ssh_password`}}'|sudo -S /sbin/halt -h -p",
        "ssh_password": "{{ user `ssh_password` }}",
        "ssh_port": 22,
        "ssh_username": "{{ user `ssh_username` }}",
        "ssh_timeout": "10500s",
        "vm_name": "{{ user `vm_name` }}",
        "virtualbox_version_file": ".vbox_version",
        "iso_interface": "sata",
        "vboxmanage": [
          ["modifyvm", "{{.Name}}", "--memory", "{{ user `memsize` }}"],
          ["modifyvm", "{{.Name}}", "--cpus", "{{ user `numvcpus` }}"],
          ["modifyvm", "{{.Name}}", "--graphicscontroller", "vmsvga"],
          ["modifyvm", "{{.Name}}", "--vram", "16"],
          ["modifyvm", "{{.Name}}", "--nic1", "bridged"]
        ]
      },
      {
        "type": "qemu",
        "name": "qemu",
        "format": "qcow2",
        "accelerator": "kvm",
        "disk_size": "{{ user `disk_size`}}",
        "iso_checksum": "{{user `iso_checksum`}}",
        "iso_urls": [
          "./iso/Rocky-8.4-x86_64-minimal.iso"
        ],
        "http_directory": "http",
        "ssh_username": "{{user `ssh_username`}}",
        "ssh_password": "{{user `ssh_password`}}",
        "ssh_wait_timeout": "10500s",
        "shutdown_command": "echo '{{user `ssh_password`}}'|sudo -S /sbin/halt -h -p",
        "boot_wait": "{{ user `boot_wait` }}",
        "boot_command": [
          "e<down><down><end><bs><bs><bs><bs><bs>text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/rocky/ks8_4.cfg<leftCtrlOn>x<leftCtrlOff>"
          ]
      }
    ],
    "post-processors": [
      {
        "keep_input_artifact": true,
        "only": [
          "virtualbox"
        ],
        "output": "builds/{{user `box_name`}}-virtualbox.box",
        "type": "vagrant"
      }
    ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo '{{user `ssh_password`}}'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
            "scripts/vagrant.sh",
            "scripts/cleanup.sh",
            "scripts/zerodisk.sh"
      ]
    }
  ]
}
